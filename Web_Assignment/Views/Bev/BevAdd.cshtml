@model BeverageVM;
@{
    Layout = "../Shared/_ALayout";
    ViewBag.Title = "Add Beverage";
}

<form method="post" class="form" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="Name"></label>
    <input asp-for="Name" autofocus>
    <span asp-validation-for="Name"></span>

    <label asp-for="Price"></label>
    <input asp-for="Price" type="number" step="0.01" min="6.00" max="17.00" autofocus>
    <span asp-validation-for="Price"></span>

    <label asp-for="Stock"></label>
    <input asp-for="Stock" type="number" min="30" max="100" step="1" autofocus>
    <span asp-validation-for="Stock"></span>

    <label asp-for="CategoryName"></label>
    <select asp-for="CategoryName" asp-items="ViewBag.Categories" class="form-control">
    </select>
    <span asp-validation-for="CategoryName"></span>

    <label>Photo</label>
    <label class="multiple">
        <input type="file" name="photo" accept="image/jpeg,image/png" multiple hidden>
        <img src="/images/photo.jpg" />
    </label>
    @Html.ValidationMessage("photo")

    <section>
        <button>Insert</button>
        <button type="reset">Reset</button>
    </section>

    <div class="info">@Html.Raw(TempData["Info"])</div>
</form>
