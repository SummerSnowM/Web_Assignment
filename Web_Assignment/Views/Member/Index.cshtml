@{
    ViewBag.Title = "Cashier List";
    Layout = "../Shared/_ALayout";
    IEnumerable<Staff> staffs = ViewBag.Staffs;
    IEnumerable<Staff> cashiers = staffs.Where(s => s.Role == "Cashier");
}

<section>
    <button><a href="/Member/MemberAdd">Register Cashier</a></button>
</section>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Role</th>
        <th>Email</th>
        <th>Status</th>
        <th>Photo</th>
        <th></th>
    </tr>

    <br>

    @foreach (var s in cashiers)
    {
        <tr>
            <td id="StaffId">@s.Id</td>
            <td>@s.Name</td>
            <td>@s.Role</td>
            <td>@s.Email</td>
            <td>@s.Status</td>
            <td><img id="profile-photo" src="@s.Path"></td>
            <td>
                <button data-get="/Member/MemberUpdate/@s.Id">Update</button>
                <button data-post="/Member/MemberDelete/@s.Id">Delete</button>
            </td>
        </tr>
        <br>
    }
</table>
